#!/bin/sh -efu

if [ -n "${VM_HELP-}" ]; then
	printf 'Runs command with specified kernel\n'
	exit 0
fi

. shell-error

[ "$#" -gt 0 ] ||
	fatal "More arguments required"

kernel="$1"
shift

if [ -d "$kernel" ]; then
	qemu_kernel="find,$kernel"
elif [ -f "$kernel" ]; then
	qemu_kernel="$kernel"
else
	fatal "kernel file or path required"
fi

export qemu_kernel

[ "$#" -gt 0 ] &&
	command="sandbox" ||
	command="run"

. "@PREFIX@/vm-command-$command"
