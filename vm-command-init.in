#!/bin/sh -efu

. shell-error

if [ -n "${VM_HELP-}" ]; then
	printf 'Initializes a home directory\n'
	exit 0
fi

[ -d "$vm_config_dir" ] ||
	verbose "Home directory not found. Creating..."

mkdir $verbose -p -- \
	"$vm_config_dir/rootfs" \
	"$vm_config_dir/socket" \
	"$vm_config_dir/tmp" \
	#

[ -f "$vm_config_file" ] ||
	:> "$vm_config_file"
